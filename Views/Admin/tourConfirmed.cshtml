@model IEnumerable<MvcApplication4.Models.Organizer>

@{
    Layout = "~/Views/Shared/_cmstLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>tourConfirmed</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.7.1.js"></script>
</head>
<body>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h1>Tour Organizers</h1>
            @if (Model.Count() == 0)
            {
                <p>No any Tour organizer </p>
            }
            else
            {
            <table border="1" style="width:100%">
                <tr>
                    <td><label>Org. Name</label></td>
                    <td><label>Email/Phone</label></td>
                    <td><label>Password</label></td>
                    <td><label>Address</label></td>
                    <td><label>Request</label></td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.name</td>
                        <td>@item.phNo</td>
                        <td>@item.password</td>
                        <td>@item.address</td>
                        <td>
                            <a href="~/Admin/tourconDelete?id=@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </table>
            }
        </div>
        <div class="col-xs-2"></div>
    </div>
</body>
</html>
