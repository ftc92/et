<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>Your Profile</h2><br />
@if (Model == null)
{
    <h4>you have not created any Profile, click on 'Create New'</h4>
    @Html.ActionLink("Create New", "Create")
}
else{
    <img src="@Url.Content(Model.Image)" style="width:250px;height:250px" /><br />
    <span style="font-weight:700">Name: </span>       @Model.Name <br />
    <span style="font-weight:700">Gender: </span>         @Model.gender <br />
    <span style="font-weight:700">Age: </span>            @Model.age <br />
    <span style="font-weight:700">Caste: </span>          @Model.cast <br />
    <span style="font-weight:700">Address: </span>        @Model.address <br />
    <span style="font-weight:700">Qualification: </span>  @Model.qualification <br />
    <span style="font-weight:700">Work: </span>           @Model.work <br />
    <span style="font-weight:700">Income: </span>         @Model.income <br />
    <span style="font-weight:700">Cell No.:</span>        @Model.cell <br />
    <span style="font-weight:700">CNIC No.:</span>        @Model.cnic <br /><br />
    <span> @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id=Model.Id })</span>

}
        </div>
    <div class="col-md-3">
        </div></div>